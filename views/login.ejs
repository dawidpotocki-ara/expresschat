<%- include('partials/head'); %>

<div class="login-container">
  <div class="login-box">
    <h2>Log in</h2>
    <form action="/login" method="post">
      <input class="form-control bg-alt border-0 text-body my-2" type="text" name="user" placeholder="Username">
      <input class="form-control bg-alt border-0 text-body my-2" type="password" name="pass" placeholder="Password">
      <input type="submit" class="btn btn-primary w-100 mb-2" value="Login">
    </form>

    <u><a class="text-body" href="/register">Don't have an account? Register.</a></u>
  </div>
</div>

<%- include('partials/script'); %>
