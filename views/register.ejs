<%- include('partials/head'); %>

<div class="login-container">
  <div class="login-box">
    <h2>Register</h2>

    <% if (locals.errors && locals.errors.register) { %>
      <% locals.errors.register.forEach(function(error) { %>
        <p class="alert alert-danger" role="alert"><%= error %></p>
      <% }) %>
    <% } %>

    <form action="/register" method="post">
      <input class="form-control bg-alt border-0 text-body my-2" type="email" name="email" placeholder="Email">
      <input class="form-control bg-alt border-0 text-body my-2" type="password" name="password" placeholder="Password">
      <input class="form-control bg-alt border-0 text-body my-2" type="password" name="passwordConfirm" placeholder="Confirm password">
      <input type="submit" class="btn btn-primary w-100 mb-2" value="Register">
    </form>

    <u><a class="text-body" href="/login">Already have an account? Log in.</a></u>
  </div>
</div>


<%- include('partials/script'); %>
